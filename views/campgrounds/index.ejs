<%- layout('layouts/boilerplate')-%>
<a href="/campgrounds/new">Add new Camp</a>
<h1>Campground!!</h1>

<% camps.forEach(camp => { %>

<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<img src="<%= camp.image %> " class="img-fluid" />
		</div>

		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= camp.title %></h5>
				<p class="card-text text-muted"><%= camp.description %></p>
				<p class="card-text">
					<small class="text-muted"> <%= camp.location %> </small>
				</p>
				<a href="/campgrounds/<%= camp._id %> " class="btn btn-primary"
					>Details</a
				>
			</div>
		</div>
	</div>
</div>
<% }) %>
