<%- layout('layouts/boilerplate')-%>

<div class="row">
	<h1 class="text-center">Edit Campground</h1>
	<div class="col-6 offset-3">
		<form
			action="/campgrounds/<%=camps._id %>?_method=PUT"
			method="post"
			class="form-validate"
			novalidate
		>
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input
					value="<%= camps.title %>"
					type="text"
					id="title"
					name="title"
					placeholder="Title"
					class="form-control"
					required
				/>
				<div class="invalid-feedback">Please Fill out Title</div>
			</div>

			<div class="mb-3">
				<label for="location" class="form-label">Location </label>
				<input
					type="text"
					id="location"
					name="location"
					placeholder="Location"
					class="form-control"
					value="<%= camps.location %> "
					required
				/>
				<div class="invalid-feedback">Please Fill out Location</div>
			</div>

			<div class="mb-3">
				<label for="image" class="form-label">Image Url </label>
				<input
					type="text"
					id="image"
					name="image"
					class="form-control"
					value="<%= camps.image %> "
					required
				/>
				<div class="invalid-feedback">Please add Image Url</div>
			</div>
			<div class="mb-3">
				<label for="price" class="form-label">Price</label>
				<div class="input-group">
					<span class="input-group-text" id="price">$</span>
					<input
						id="price"
						name="price"
						type="text"
						class="form-control"
						placeholder="0.00"
						step="any"
						cearia-label="price"
						aria-describedby="price"
						value="<%= camps.price %> "
						required
					/>
					<div class="invalid-feedback">Please Fill out Price</div>
				</div>
			</div>

			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea
					class="form-control"
					id="description"
					rows="3"
					name="description"
					required
				>
<%= camps.description %>
				</textarea
				>
				<div class="invalid-feedback">Please Fill out Description</div>
			</div>

			<div class="mb-3">
				<button class="btn btn-info text-light">Edit Campground</button>
				<a href="/campgrounds/<%= camps._id %>" class="btn btn-danger"
					>Cancel</a
				>
			</div>
		</form>
	</div>
</div>
